<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Sistemaxm">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>br.com.sistemaxm.entidades.Carro</class>
		<class>br.com.sistemaxm.entidades.Marca</class>
		<class>br.com.sistemaxm.entidades.Usuario</class>
		<class>br.com.sistemaxm.entidades.Pessoa</class>
		<class>br.com.sistemaxm.entidades.PessoaFisica</class>
		<class>br.com.sistemaxm.entidades.PessoaJuridica</class>
		<class>br.com.sistemaxm.entidades.Cliente</class>
		<class>br.com.sistemaxm.entidades.Endereco</class>
	<properties>
		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/xm" />
		<property name="javax.persistence.jdbc.user" value="dibas" />
		<property name="javax.persistence.jdbc.password" value="dibas" />
		<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
		<property name="hibernate.default_schema" value="xm"/> 
		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
		<property name="hibernate.show_sql" value="true" />
		<property name="hibernate.format_sql" value="true" />
		<property name="hibernate.hbm2ddl.auto" value="update" />
	</properties>
	</persistence-unit>
</persistence>
